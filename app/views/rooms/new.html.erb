<div class="container">

  <h2 class="text-center">Add Thread</h2>

  <%= form_for @room, url: rooms_path, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :title, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit 'Create', class: 'btn btn-success' %>
      </div>
    </div>

    <%= f.hidden_field :instance_id, value: @instance.id %>
    <%= hidden_field_tag :access_token, params[:access_token] %>
  <% end %>
</div>
