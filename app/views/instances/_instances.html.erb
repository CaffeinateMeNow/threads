<div class="text-center section-header">
  <h2>All instances</h2>
</div>

<div class="list-group instances-list">
  <%= render @instances %>
</div>

<div class="instance-control text-right">
  <% if can? :create, Instance %>
    <%= link_to 'Submit New Instance', new_instance_path, class: 'btn btn-success' %>
  <% end %>
</div>
